  <script>
    // Year
    document.getElementById('year').textContent = new Date().getFullYear();

    // Mobile menu
    const menuBtn = document.getElementById('menuBtn');
    const mobileMenu = document.getElementById('mobileMenu');
    menuBtn.addEventListener('click', () => mobileMenu.classList.toggle('hidden'));
    document.querySelectorAll('.mobile-link').forEach(l => l.addEventListener('click', () => mobileMenu.classList.add('hidden')));

    // Smooth scroll offset
    const OFFSET = 80;
    function smoothScrollTo(id) {
      const el = document.querySelector(id);
      if (!el) return;
      const y = el.getBoundingClientRect().top + window.pageYOffset - OFFSET;
      window.scrollTo({ top: y, behavior: 'smooth' });
    }
    document.querySelectorAll('a[href^="#"]').forEach(a => {
      a.addEventListener('click', (e) => {
        const href = a.getAttribute('href');
        if (href.length > 1) { e.preventDefault(); smoothScrollTo(href); }
      });
    });

    // Active link highlight
    const navLinks = document.querySelectorAll('.nav-link');
    const ids = ['about','skills','achievements','projects','internships','certifications','contact'];
    const observed = ids.map(id => document.getElementById(id)).filter(Boolean);
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        const id = entry.target.id;
        const link = Array.from(navLinks).find(l => l.getAttribute('href') === '#' + id);
        if (entry.isIntersecting) {
          navLinks.forEach(l => l.classList.remove('bg-white/10'));
          if (link) link.classList.add('bg-white/10');
        }
      });
    }, { rootMargin: '-50% 0px -50% 0px', threshold: 0 });
    observed.forEach(sec => observer.observe(sec));

    // Project details toggle
    document.querySelectorAll('.toggleDetails').forEach(btn => {
      btn.addEventListener('click', () => {
        const card = btn.closest('article');
        const details = card.querySelector('.details');
        const isHidden = details.classList.toggle('hidden');
        btn.textContent = isHidden ? 'Details' : 'Hide';
      });
    });

    // Back to top
    const toTop = document.getElementById('toTop');
    window.addEventListener('scroll', () => {
      if (window.scrollY > 400) toTop.classList.remove('hidden');
      else toTop.classList.add('hidden');
    });
    toTop.addEventListener('click', () => window.scrollTo({ top: 0, behavior: 'smooth' }));

    // Toast helper
    function toast(message) {
      const t = document.createElement('div');
      t.textContent = message;
      t.className = 'fixed bottom-6 left-1/2 -translate-x-1/2 px-4 py-2 rounded-xl bg-black/80 text-white text-sm shadow-soft z-[70]';
      document.body.appendChild(t);
      setTimeout(() => t.remove(), 2200);
    }

    // Email copy
    const EMAIL = 'saiipallapati@gmail.com';
    document.getElementById('copyEmail').addEventListener('click', async () => {
      try { await navigator.clipboard.writeText(EMAIL); toast('Email copied!'); }
      catch { toast('Could not copy email'); }
    });
    document.getElementById('copyEmail2').addEventListener('click', async () => {
      try { await navigator.clipboard.writeText(EMAIL); toast('Email copied!'); }
      catch { toast('Could not copy email'); }
    });

    // Profile photo: upload + drag-drop
    const fileInput = document.getElementById('fileInput');
    const uploadBtn = document.getElementById('uploadBtn');
    const pasteUrlBtn = document.getElementById('pasteUrlBtn');
    const pastePathBtn = document.getElementById('pastePathBtn');
    const profilePhoto = document.getElementById('profilePhoto');
    const photoFallback = document.getElementById('photoFallback');
    const photoDropzone = document.getElementById('photoDropzone');

    // Load saved photo if available
    try {
      const savedPhoto = localStorage.getItem('profilePhotoData');
      if (savedPhoto) {
        profilePhoto.src = savedPhoto;
        profilePhoto.classList.remove('hidden');
        photoFallback.classList.add('hidden');
      }
    } catch (e) {
      // ignore storage errors
    }

    uploadBtn.addEventListener('click', () => fileInput.click());
    fileInput.addEventListener('change', (e) => {
      const file = e.target.files && e.target.files[0];
      if (!file) return;
      const reader = new FileReader();
      reader.onload = () => {
        const dataUrl = reader.result;
        profilePhoto.src = dataUrl;
        profilePhoto.classList.remove('hidden');
        photoFallback.classList.add('hidden');
        try { localStorage.setItem('profilePhotoData', dataUrl); } catch (e) {}
        toast('Photo updated!');
      };
      reader.readAsDataURL(file);
    });

    // Drag & drop support
    ;['dragenter','dragover'].forEach(evt => photoDropzone.addEventListener(evt, (e) => { e.preventDefault(); photoDropzone.classList.add('ring-2','ring-brand-500'); }));
    ;['dragleave','drop'].forEach(evt => photoDropzone.addEventListener(evt, () => photoDropzone.classList.remove('ring-2','ring-brand-500')));
    photoDropzone.addEventListener('drop', (e) => {
      e.preventDefault();
      const file = e.dataTransfer.files && e.dataTransfer.files[0];
      if (!file) return;
      const reader = new FileReader();
      reader.onload = () => {
        const dataUrl = reader.result;
        profilePhoto.src = dataUrl;
        profilePhoto.classList.remove('hidden');
        photoFallback.classList.add('hidden');
        try { localStorage.setItem('profilePhotoData', dataUrl); } catch (e) {}
        toast('Photo updated!');
      };
      reader.readAsDataURL(file);
    });

    // Local file path note
    pastePathBtn.addEventListener('click', () => {
      toast('Local file paths like C:\\Users\\... cannot load here. Please use Upload or an https:// image link.');
    });

    // Photo by URL
    const urlModal = document.getElementById('urlModal');
    const urlInput = document.getElementById('urlInput');
    const cancelUrl = document.getElementById('cancelUrl');
    const saveUrl = document.getElementById('saveUrl');

    function openUrlModal() { urlModal.classList.remove('hidden'); urlInput.value=''; urlInput.focus(); }
    function closeUrlModal() { urlModal.classList.add('hidden'); }
    pasteUrlBtn.addEventListener('click', openUrlModal);
    cancelUrl.addEventListener('click', closeUrlModal);
    saveUrl.addEventListener('click', () => {
      const val = urlInput.value.trim();
      if (!val) { toast('Please enter a URL'); return; }
      profilePhoto.onload = () => {
        profilePhoto.classList.remove('hidden');
        photoFallback.classList.add('hidden');
        try { localStorage.setItem('profilePhotoData', profilePhoto.src); } catch (e) {}
        toast('Photo updated!');
      };
      profilePhoto.onerror = () => {
        profilePhoto.src = '';
        profilePhoto.style.display = 'none';
        photoFallback.classList.remove('hidden');
        toast('Could not load that image URL');
      };
      profilePhoto.style.display = '';
      profilePhoto.src = val;
      closeUrlModal();
    });

    // Edit Profiles
    const profilesModal = document.getElementById('profilesModal');
    const editProfiles = document.getElementById('editProfiles');
    const cancelProfiles = document.getElementById('cancelProfiles');
    const saveProfiles = document.getElementById('saveProfiles');

    const linkGithub = document.getElementById('linkGithub');
    const linkPortfolio = document.getElementById('linkPortfolio');
    const linkLinkedIn = document.getElementById('linkLinkedIn');
    const linkLeetCode = document.getElementById('linkLeetCode');
    const linkLinkedIn2 = document.getElementById('linkLinkedIn2');

    const inGithub = document.getElementById('inGithub');
    const inPortfolio = document.getElementById('inPortfolio');
    const inLinkedIn = document.getElementById('inLinkedIn');
    const inLeetCode = document.getElementById('inLeetCode');

    function openProfilesModal() {
      inGithub.value = linkGithub.href;
      inPortfolio.value = linkPortfolio.href;
      inLinkedIn.value = linkLinkedIn.href;
      inLeetCode.value = linkLeetCode.href;
      profilesModal.classList.remove('hidden');
    }
    function closeProfilesModal() { profilesModal.classList.add('hidden'); }

    editProfiles.addEventListener('click', openProfilesModal);
    cancelProfiles.addEventListener('click', closeProfilesModal);
    saveProfiles.addEventListener('click', () => {
      const gh = inGithub.value || linkGithub.href;
      const pf = inPortfolio.value || linkPortfolio.href;
      const li = inLinkedIn.value || linkLinkedIn.href;
      const lc = inLeetCode.value || linkLeetCode.href;
      linkGithub.href = gh;
      linkPortfolio.href = pf;
      linkLinkedIn.href = li;
      linkLinkedIn2.href = li;
      linkLeetCode.href = lc;
      closeProfilesModal();
      toast('Links updated!');
    });

    // Contact form (no navigation)
    const form = document.getElementById('contactForm');
    const status = document.getElementById('formStatus');
    form.addEventListener('submit', (e) => {
      e.preventDefault();
      status.classList.remove('hidden');
      status.textContent = 'Thanks! Your message was noted locally.';
      setTimeout(() => status.classList.add('hidden'), 4000);
      form.reset();
    });
  </script>
